@{

    @if ( ViewData["Title"] == "Result")
    {       
        <h1 span style = "margin:20px; margin-left:-20px" >Result</h1>
        <h2> @Model.x @Model.sign @Model.y = @Model.res</h2>
    }

    else if ( ViewData["Title"] == "Result2")
    {       
        <h1 span style = "margin:20px; margin-left:-20px" >Result</h1>
        <h2> @Model.res</h2>
    }

    else 
    {      
        @using (Html.BeginForm())
        {
            <h1 span style = "margin: 15px; margin-left:0">@ViewData["Title"]</h1>           
            @Html.TextBox("x","1", new { type="number" }) <br/>           
            @Html.DropDownList("sign", new SelectList(new string[] { "+", "-", "*", "/" }))<br/>          
            @Html.TextBox("y","2", new { type="number" })<br/>            
            <input type="submit" value="Submit" />           
        }
    }
}